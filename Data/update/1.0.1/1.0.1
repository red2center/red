import requests

def gettext(url):
    try:
        # URL'den içeriği al
        response = requests.get(url)
        response.raise_for_status()  # Hata durumunda bir istisna oluşturur
        # Sayfanın içeriğini döndür
        return response.text.strip()  # Yanıt metnini döndürür
    except requests.exceptions.RequestException as e:
        return f"Hata: {e}"

